<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TrovaDaNome" >

    <TextView
        android:layout_weight="1"
        android:id="@+id/cognome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Cognome:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <MultiAutoCompleteTextView
        android:layout_weight="1"
        android:id="@+id/campoCognome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:ems="10"
        android:textSize="25dp"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:hint="Inserisci cognome"
        android:inputType="textPersonName"
        android:textColor="#a7d3ff" >

        <requestFocus />
    </MultiAutoCompleteTextView>

    <TextView
        android:id="@+id/nome"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Nome:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />
    <EditText
        android:id="@+id/campoNome"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:ems="10"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:hint="Inserisci nome"
        android:textSize="25dp"
        android:inputType="textPersonName"
        android:textColor="#a7d3ff" />

    <TextView
        android:id="@+id/textView1"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:text="Matricola:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Spinner
        android:id="@+id/matricola"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#a7d3ff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="E-Mail:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/mailMatricola"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#a7d3ff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" >

        <Button
            android:layout_weight="1"
            android:id="@+id/cacheM"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableRight="@drawable/trash"
            android:text="Cache"
            android:textColor="#a7d3ff" />

        <Button
            android:layout_weight="1"
            android:id="@+id/cerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableLeft="@drawable/cerca"
            android:text="Cerca!"
            android:textColor="#a7d3ff" />
    </LinearLayout>

</LinearLayout>