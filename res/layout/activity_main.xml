<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TrovaDaMatricola" >

    <TextView
        android:layout_weight="1"
        android:id="@+id/Matricola"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricola:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <MultiAutoCompleteTextView
        android:layout_weight="1"
        android:id="@+id/campoMatrico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#a7d3ff"
        android:imeOptions="actionDone"
        android:gravity="center"
        android:hint="Inserisci matricola"
        android:textSize="25dp"
        android:inputType="number" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/cognome"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nominativo:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/campoNome"
        android:textColor="#a7d3ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Mail:"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/mailMatricola"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#a7d3ff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" >

        <Button
            android:layout_weight="1"
            android:id="@+id/cacheM"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableRight="@drawable/trash"
            android:text="Cache"
            android:textColor="#a7d3ff" />

        <Button
            android:layout_weight="1"
            android:id="@+id/cerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:drawableLeft="@drawable/cerca"
            android:text="Cerca!"
            android:textColor="#a7d3ff" />
    </LinearLayout>

</LinearLayout>